<?xml version="1.0" encoding="utf-8"?>
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.Preview>
        <Border Padding="20">
            <StackPanel Spacing="20">
                <TextBlock Text="Common Styles Preview"/>
            </StackPanel>
        </Border>
    </Design.Preview>

    <Styles.Resources>
        <!-- Opacity values -->
        <x:Double x:Key="DefaultOpacity">0.7</x:Double>
