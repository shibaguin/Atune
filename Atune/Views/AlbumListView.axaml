<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Atune.Models"
             xmlns:conv="clr-namespace:Atune.Converters"
             x:Class="Atune.Views.AlbumListView"
             x:DataType="models:AlbumInfo">
  <UserControl.Resources>
    <!-- Converter for cover art images -->
    <conv:CoverArtConverter x:Key="CoverArtConverter"/>
  </UserControl.Resources>
  <Grid ColumnDefinitions="Auto,*" VerticalAlignment="Center" Margin="5">
    <Button x:Name="CoverButton" Grid.Column="0"
            Width="50" Height="50"
            Margin="0,0,5,0"
            Background="Transparent" BorderThickness="0"
            Focusable="False">
      <Grid>
        <Image Source="{Binding CoverArt, Converter={StaticResource CoverArtConverter}}"
               Stretch="UniformToFill"/>
        <Rectangle x:Name="Overlay"
                   Fill="Black"
                   Opacity="0"
                   IsHitTestVisible="False"/>
        <TextBlock x:Name="PlayIcon"
                   Text="â–¶"
                   Foreground="White"
                   Opacity="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"/>
      </Grid>
    </Button>
    <!-- Album info / open details -->
    <Button x:Name="OpenButton"
            Grid.Column="1"
            Background="Transparent"
            BorderThickness="0"
            HorizontalAlignment="Stretch"
            Focusable="False">
      <StackPanel Spacing="2">
        <TextBlock Text="{Binding AlbumName}" FontWeight="Bold" FontSize="14"/>
        <TextBlock Text="{Binding ArtistName}" FontSize="12" Foreground="Gray"/>
        <TextBlock Text="{Binding Year}" FontSize="12" Foreground="Gray"/>
        <TextBlock Text="{Binding TrackCount, StringFormat='Tracks: {0}'}" FontSize="12" Foreground="Gray"/>
      </StackPanel>
    </Button>
  </Grid>
</UserControl> 