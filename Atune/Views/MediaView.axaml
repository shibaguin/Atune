<UserControl x:Name="Root"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:vm="clr-namespace:Atune.ViewModels"
             xmlns:models="clr-namespace:Atune.Models"
             xmlns:helpers="clr-namespace:Atune.Helpers"
             xmlns:converters="clr-namespace:Atune.Converters"
             xmlns:views="clr-namespace:Atune.Views"
             x:Class="Atune.Views.MediaView"
             x:DataType="vm:MediaViewModel"
             d:DataContext="{d:DesignInstance Type=vm:MediaViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
         <converters:AllArtistsConverter x:Key="AllArtistsConverter"/>
         <converters:SortOrderToIndexConverter x:Key="SortOrderConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource Media_Tracks}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="{DynamicResource Media_SortBy}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedIndex="{Binding SortOrderTracks, Mode=TwoWay, Converter={StaticResource SortOrderConverter}}" Width="120">
                            <ComboBoxItem Content="{DynamicResource Sort_AZ}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_ZA}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_OldFirst}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_NewFirst}"/>
                        </ComboBox>
                    </StackPanel>
                    <ListBox Grid.Row="1" ItemsSource="{Binding MediaItems}" SelectedItem="{Binding SelectedMediaItem, Mode=TwoWay}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="2" Padding="5" Background="Transparent">
                                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                                        <!-- Play button -->
                                        <Button Grid.Column="0"
                                                Command="{Binding PlayTrackCommand, ElementName=Root}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" Focusable="False">
                                            <TextBlock Text="▶" FontSize="16"/>
                                        </Button>
                                        <!-- Track info -->
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding TrackArtists, Converter={StaticResource AllArtistsConverter}}" FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Album.Title}" FontSize="12" Foreground="Gray"/>
                                            <TextBlock Text="{Binding Year}" FontSize="12" Foreground="Gray"/>
                                        </StackPanel>
                                        <!-- Playlist menu -->
                                        <Button Grid.Column="2"
                                                Name="PlaylistMenuButton"
                                                Content="⋮"
                                                Background="Transparent" BorderThickness="0" Focusable="False">
                                            <Button.ContextMenu>
                                                <ContextMenu Opened="PlaylistContextMenu_Opened"/>
                                            </Button.ContextMenu>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource Media_Albums}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="{DynamicResource Media_SortBy}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedIndex="{Binding SortOrderAlbums, Mode=TwoWay, Converter={StaticResource SortOrderConverter}}" Width="120">
                            <ComboBoxItem Content="{DynamicResource Sort_AZ}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_ZA}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_OldFirst}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_NewFirst}"/>
                        </ComboBox>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="AlbumsList" ItemsSource="{Binding Albums}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:AlbumInfo">
                                    <Button Command="{Binding OpenAlbumCommand, RelativeSource={RelativeSource AncestorType=views:MediaView}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="5"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                            <TextBlock Text="{Binding AlbumName}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding ArtistName}" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Year}" 
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding TrackCount, StringFormat='Треков: {0}'}" 
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource Media_Playlists}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="{DynamicResource Media_SortBy}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedIndex="{Binding SortOrderPlaylists, Mode=TwoWay, Converter={StaticResource SortOrderConverter}}" Width="120">
                            <ComboBoxItem Content="{DynamicResource Sort_AZ}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_ZA}"/>
                        </ComboBox>
                        <Button Content="{DynamicResource Media_CreatePlaylist}" Command="{Binding CreatePlaylistCommand}" Margin="10,0,0,0"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Playlists}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:Playlist">
                                    <Button Command="{Binding OpenPlaylistCommand, ElementName=Root}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Margin="5"
                                            HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding Name}" FontSize="14"/>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource Media_Artists}">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="{DynamicResource Media_SortBy}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox SelectedIndex="{Binding SortOrderArtists, Mode=TwoWay, Converter={StaticResource SortOrderConverter}}" Width="120">
                            <ComboBoxItem Content="{DynamicResource Sort_AZ}"/>
                            <ComboBoxItem Content="{DynamicResource Sort_ZA}"/>
                        </ComboBox>
                    </StackPanel>
                    <!-- Содержимое для вкладки Исполнители -->
                </StackPanel>
            </TabItem>
            <TabItem Header="{DynamicResource Media_Queue}">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
                        <Button Content="Play Next" Command="{Binding PlayNextInQueueCommand}" Margin="0,0,5,0"/>
                        <Button Content="Clear Queue" Command="{Binding ClearQueueCommand}"/>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding PlaybackQueue}" SelectedItem="{Binding SelectedMediaItem}" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <TextBlock Text="{Binding Title}"/>
                                    <Button Content="▶" Command="{Binding PlayMediaItemCommand, ElementName=Root}" CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </TabItem>
        </TabControl>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Grid.Row="2">
            <Button Content="{DynamicResource Media_AddMusic}" 
                    Click="AddToLibrary_Click"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Right"/>
            <Button Content="{DynamicResource Media_AddFolder}"
                    Command="{Binding AddFolderCommand}"
                    Margin="5,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Right"/>
            <Button Content="{DynamicResource Media_Refresh}" 
                    Command="{Binding RefreshMediaCommand}"
                    Margin="10,0,0,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
            <Button Content="{DynamicResource Media_Drop}" 
                    Command="{Binding DropMediaRecordsCommand}"
                    Margin="10,0,0,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
            <Button Content="{DynamicResource Media_PrintDatabase}" 
                    Command="{Binding PrintDatabaseCommand}"
                    Margin="10,0,0,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</UserControl>