<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:vm="clr-namespace:Atune.ViewModels"
             x:Class="Atune.Views.MediaView"
             x:DataType="vm:MediaViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding MediaItems}" 
                 Grid.Row="1">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" Spacing="3">
                        <TextBlock Text="{Binding Title}" 
                                   FontWeight="Bold"
                                   MaxLines="1"/>
                        <TextBlock Text="{Binding Artist}" 
                                   MaxLines="1"/>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="{Binding Genre}" 
                                       Foreground="Gray"
                                       MaxLines="1"/>
                            <TextBlock Text="{Binding Year}" 
                                       Foreground="Gray"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Path}" 
                                   FontSize="12"
                                   Foreground="DarkGray"
                                   MaxLines="1"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Margin="10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1"
                    Content="Добавить музыку" 
                    Click="AddToLibrary_Click"
                    Padding="15 5"
                    FontSize="16"
                    HorizontalAlignment="Right"/>
            <Button Grid.Column="2"
                    Content="Добавить папку"
                    Command="{Binding AddFolderCommand}"
                    Margin="5,0"
                    Padding="15 5"
                    FontSize="16"/>
        </Grid>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Grid.Row="1">
            <Button Content="Обновить" 
                    Command="{Binding RefreshMediaCommand}"
                    Margin="0"
                    Padding="10 5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
            <Button Content="Drop" 
                    Command="{Binding DropMediaRecordsCommand}"
                    Margin="10,0,0,0"
                    Padding="10 5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</UserControl>