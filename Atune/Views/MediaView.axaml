<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:vm="clr-namespace:Atune.ViewModels"
             x:Class="Atune.Views.MediaView"
             x:DataType="vm:MediaViewModel">
    <Grid>
        <ListBox ItemsSource="{Binding MediaItems}" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Path}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Margin="20" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1"
                    Content="Добавить музыку" 
                    Click="AddToLibrary_Click"
                    Padding="15 5"
                    FontSize="16"
                    HorizontalAlignment="Right"
                    Margin="0 0 0 10"/>
            
            <TextBlock Grid.Column="1"
                       Text="{Binding StatusMessage}"
                       Margin="0 40 0 0"
                       Foreground="Green"
                       HorizontalAlignment="Right"/>
            
            <Button Content="Test DB" 
                    Click="TestDbConnection_Click"
                    Margin="5"
                    HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</UserControl>