<UserControl x:Name="Root"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:vm="clr-namespace:Atune.ViewModels"
             xmlns:models="clr-namespace:Atune.Models"
             xmlns:helpers="clr-namespace:Atune.Helpers"
             xmlns:converters="clr-namespace:Atune.Converters"
             x:Class="Atune.Views.MediaView"
             x:DataType="vm:MediaViewModel"
             d:DataContext="{d:DesignInstance Type=vm:MediaViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
         <helpers:MediaViewModelBindingProxy x:Key="Proxy" Data="{Binding}" />
         <converters:AllArtistsConverter x:Key="AllArtistsConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox SelectedItem="{Binding SortOrder, Mode=TwoWay}" Width="120" 
                      SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="A-Z" />
                <ComboBoxItem Content="Z-A" />
            </ComboBox>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource Media_Tracks}">
                <ListBox ItemsSource="{Binding MediaItems}" 
                         SelectedItem="{Binding SelectedMediaItem, Mode=TwoWay}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding PlayMediaItemCommand, ElementName=Root}"
                                    CommandParameter="{Binding}"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Focusable="False"
                                    HorizontalAlignment="Stretch">
                                <StackPanel Margin="2" Spacing="2" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding Title}" 
                                               FontWeight="Bold"
                                               MaxLines="1"
                                               HorizontalAlignment="Stretch"/>
                                    <TextBlock Text="{Binding TrackArtists, Converter={StaticResource AllArtistsConverter}}" 
                                               MaxLines="1"
                                               HorizontalAlignment="Stretch"/>
                                    <TextBlock Text="{Binding Album.Title}" 
                                               Foreground="Gray"
                                               MaxLines="1"
                                               HorizontalAlignment="Stretch"/>
                                    <TextBlock Text="{Binding Year}" 
                                               Foreground="Gray"
                                               HorizontalAlignment="Stretch"/>
                                    <!--
                                    <Button Command="{Binding MoreInfoCommand, ElementName=Root}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Right" 
                                            Width="30" Margin="5,0,0,0">
                                        <Button.Content>
                                            <PathIcon Data="M8 12a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM14 12a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM18 14a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z"/>
                                        </Button.Content>
                                    </Button>
                                    -->
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="{DynamicResource Media_Albums}">
                <ScrollViewer>
                    <ItemsControl x:Name="AlbumsList" ItemsSource="{Binding Albums}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:AlbumInfo">
                                <Button Command="{Binding Data.OpenAlbumCommand, Source={StaticResource Proxy}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Margin="5"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding AlbumName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding ArtistName}" 
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Year}" 
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding TrackCount, StringFormat='Треков: {0}'}" 
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{DynamicResource Media_Playlists}">
                <!-- Содержимое для вкладки Плейлисты -->
            </TabItem>
            <TabItem Header="{DynamicResource Media_Artists}">
                <!-- Содержимое для вкладки Исполнители -->
            </TabItem>
        </TabControl>
        
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10"
                    Grid.Row="2">
            <Button Content="{DynamicResource Media_AddMusic}" 
                    Click="AddToLibrary_Click"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Right"/>
            <Button Content="{DynamicResource Media_AddFolder}"
                    Command="{Binding AddFolderCommand}"
                    Margin="5,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Right"/>
            <Button Content="{DynamicResource Media_Refresh}" 
                    Command="{Binding RefreshMediaCommand}"
                    Margin="10,0,0,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
            <Button Content="{DynamicResource Media_Drop}" 
                    Command="{Binding DropMediaRecordsCommand}"
                    Margin="10,0,0,0"
                    Padding="5 5"
                    FontSize="16"
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</UserControl>