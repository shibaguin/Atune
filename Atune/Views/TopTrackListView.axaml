<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Atune.Views.TopTrackListView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dto="clr-namespace:Atune.Models.Dtos"
             xmlns:converters="clr-namespace:Atune.Converters"
             x:DataType="dto:TopTrackDto">
  <UserControl.Resources>
    <converters:CoverArtConverter x:Key="CoverArtConverter"/>
    <converters:DurationConverter x:Key="DurationConverter"/>
  </UserControl.Resources>
  <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center" Margin="5">
    <Button x:Name="PlayButton" Grid.Column="0" MinWidth="50" MinHeight="50" MaxWidth="50" MaxHeight="50" Margin="0,0,5,0" Padding="0" Background="Transparent" BorderThickness="0" Focusable="False">
      <Grid>
        <Image Source="{Binding CoverArtPath, Converter={StaticResource CoverArtConverter}}" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Rectangle x:Name="Overlay" Fill="Black" Opacity="0" IsHitTestVisible="False"/>
        <TextBlock x:Name="PlayIcon" Text="â–¶" Foreground="{DynamicResource PrimaryContentBrush}" Opacity="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
      </Grid>
    </Button>
    <StackPanel Grid.Column="1" Spacing="2">
      <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
      <TextBlock Text="{Binding ArtistName}" FontSize="12" Foreground="Gray"/>
      <TextBlock Text="{Binding Duration, Converter={StaticResource DurationConverter}}" FontSize="12" Foreground="Gray"/>
    </StackPanel>
    <TextBlock Grid.Column="2" Text="{Binding PlayCount}" VerticalAlignment="Center" FontSize="12" Margin="10,0,0,0"/>
  </Grid>
</UserControl>