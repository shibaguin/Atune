<UserControl x:Name="Root" xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:vm="clr-namespace:Atune.ViewModels"
              xmlns:models="clr-namespace:Atune.Models"
              xmlns:views="clr-namespace:Atune.Views"
              xmlns:conv="clr-namespace:Atune.Converters"
              mc:Ignorable="d"
              d:DesignWidth="400"
              d:DesignHeight="600"
              x:Class="Atune.Views.AlbumView"
              x:DataType="vm:AlbumViewModel"
              PointerPressed="OnPointerPressed"
              KeyDown="OnKeyDown"
              Focusable="True">
  <UserControl.Resources>
    <conv:CoverArtConverter x:Key="CoverArtConverter"/>
  </UserControl.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Spacing="10">
      <Image Source="{Binding Album.CoverArt, Converter={StaticResource CoverArtConverter}}"
             Width="200" Height="200"
             Stretch="Uniform"
             HorizontalAlignment="Center"/>
      <Button Content="{DynamicResource Album_Back}" Click="BackButton_Click" HorizontalAlignment="Left"/>
      <Button Content="{DynamicResource Album_PlayAlbum}" Click="PlayAlbumButton_Click" HorizontalAlignment="Left"/>
      <TextBlock Text="{Binding Album.AlbumName}" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 HorizontalAlignment="Center"/>
      <TextBlock Text="{Binding Album.ArtistName}" 
                 FontSize="16" 
                 HorizontalAlignment="Center"/>
      <TextBlock Text="{Binding Album.Year}" 
                 FontSize="16" 
                 HorizontalAlignment="Center"/>
      <TextBlock FontSize="16" HorizontalAlignment="Center">
        <TextBlock.Inlines>
          <Run Text="{DynamicResource Album_TrackCountLabel}"/>
          <Run Text="{Binding Album.TrackCount}"/>
        </TextBlock.Inlines>
      </TextBlock>
    </StackPanel>
    <ListBox Grid.Row="1" ItemsSource="{Binding Album.Tracks}" Margin="0,20,0,0">
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="models:MediaItem">
          <views:TrackItemView
            PlayCommand="{Binding PlayTrackCommand, RelativeSource={RelativeSource AncestorType=views:AlbumView}}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl> 