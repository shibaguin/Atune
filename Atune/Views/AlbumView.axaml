<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Atune.ViewModels"
        xmlns:models="clr-namespace:Atune.Models"
        mc:Ignorable="d"
        x:Class="Atune.Views.AlbumView"
        x:DataType="vm:AlbumViewModel"
        Title="Альбом"
        Width="400" Height="600">
  <StackPanel Margin="10" Spacing="10">
    <TextBlock Text="{Binding Album.AlbumName}" 
               FontSize="24" 
               FontWeight="Bold" 
               HorizontalAlignment="Center"/>
    <TextBlock Text="{Binding Album.ArtistName}" 
               FontSize="16" 
               HorizontalAlignment="Center"/>
    <TextBlock Text="{Binding Album.Year}" 
               FontSize="16" 
               HorizontalAlignment="Center"/>
    <TextBlock Text="{Binding Album.TrackCount, StringFormat='Количество треков: {0}'}" 
               FontSize="16" 
               HorizontalAlignment="Center"/>
    <ListBox ItemsSource="{Binding Album.Tracks}" Margin="0,20,0,0">
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="models:MediaItem">
          <StackPanel Orientation="Horizontal" Margin="2">
            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
            <TextBlock Text=" - "/>
            <!--
            <TextBlock Text="{Binding Artist}"/>
            -->
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</Window> 