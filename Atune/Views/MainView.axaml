                                <ListBox ItemsSource="{Binding SearchSuggestions}"
                                         SelectionChanged="SearchSuggestions_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>
                    <Button Content="ðŸ”"
