<UserControl x:Name="Root"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Atune.Views.HomeView"
             xmlns:views="clr-namespace:Atune.Views"
             xmlns:dto="clr-namespace:Atune.Models.Dtos"
             x:CompileBindings="False">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <!-- Top Tracks -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Top Tracks" FontSize="16" FontWeight="Bold" Margin="5"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding TopTracks}" BorderThickness="0" Margin="5"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <views:TopTrackListView PlayCommand="{Binding PlayTopTrackCommand, ElementName=Root}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <!-- Top Playlists -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Top Playlists" FontSize="16" FontWeight="Bold" Margin="5"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding TopPlaylists}" BorderThickness="0" Margin="5"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent" BorderThickness="0"
                                Command="{Binding OpenPlaylistCommand, ElementName=Root}" CommandParameter="{Binding .}">
                            <views:TopPlaylistListView PlayCommand="{Binding PlayTopPlaylistCommand, ElementName=Root}"/>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <!-- Top Albums -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Top Albums" FontSize="16" FontWeight="Bold" Margin="5"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding TopAlbums}" BorderThickness="0" Margin="5"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     HorizontalAlignment="Stretch">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Background="Transparent" BorderThickness="0"
                                Command="{Binding OpenAlbumCommand, ElementName=Root}" CommandParameter="{Binding .}">
                            <views:TopAlbumListView PlayCommand="{Binding PlayTopAlbumCommand, ElementName=Root}"/>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <!-- Recently Played -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Recently Played" FontSize="16" FontWeight="Bold" Margin="5"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding RecentTracks}" BorderThickness="0" Margin="5"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                     HorizontalAlignment="Stretch">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <views:RecentlyPlayedListView PlayCommand="{Binding PlayRecentTrackCommand, ElementName=Root}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
